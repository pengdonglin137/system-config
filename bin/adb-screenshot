#!/bin/bash

exec 1>&2 # must not change this line, because onmyoji depend on it for orientation.

if test -z "${phone_width}"; then
    init-data() {
        true
    }
    init-is-functions() {
        true
    }
    . ~/.local-config/knuth-mode/onmyoji-scripts/.init-size; init-size
fi


# echo phone_sticky=$phone_sticky phone_width=$phone_width phone_height=$phone_height $(debug-args $0 "$@") >> ~/tmp/adb-screenshot.args.$ANDROID_SERIAL

## start code-generator "^\\s *#\\s *"
# generate-getopt x:x=0 y:y=0 s:s='${phone_width:-0}x${phone_height:-0}' '?size' eedit @:sticky='${phone_sticky:-0}' @system-screencap
## end code-generator
## start generated code
TEMP=$( getopt -o es:x:y:h \
               --long edit,s:,sticky:,system-screencap,x:,y:,help,no-edit,no-system-screencap \
               -n $(basename -- $0) -- "$@")
declare edit=false
declare s=${phone_width}x${phone_height}
declare sticky=${phone_sticky:-0}
declare system_screencap=false
declare x=0
declare y=0
eval set -- "$TEMP"
while true; do
    case "$1" in

        -e|--edit|--no-edit)
            if test "$1" = --no-edit; then
                edit=false
            else
                edit=true
            fi
            shift

            ;;
        -s|--s)
            s=$2
            shift 2

            ;;
        --sticky)
            sticky=$2
            shift 2

            ;;
        --system-screencap|--no-system-screencap)
            if test "$1" = --no-system-screencap; then
                system_screencap=false
            else
                system_screencap=true
            fi
            shift

            ;;
        -x|--x)
            x=$2
            shift 2

            ;;
        -y|--y)
            y=$2
            shift 2

            ;;
        -h|--help)
            set +x
            echo -e
            echo
            echo Options and arguments:
            printf %06s '-e, '
            printf %-24s '--[no-]edit'
            echo
            printf %06s '-s, '
            printf %-24s '--s=S'
            echo size
            printf "%06s" " "
            printf %-24s '--sticky=STICKY'
            echo
            printf "%06s" " "
            printf %-24s '--[no-]system-screencap'
            echo
            printf %06s '-x, '
            printf %-24s '--x=X'
            echo
            printf %06s '-y, '
            printf %-24s '--y=Y'
            echo
            exit
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error: $(. bt; echo; bt | indent-stdin)"
            ;;
    esac
done


## end generated code

if [[ "$s" =~ x ]]; then
    W=${s%x*}
    H=${s#*x}
else
    W=$s
    H=$s
fi

X=$(($x + $W))
Y=$(($y + $H))

x=$((x < 0 ? 0 : x))
y=$((y < 0 ? 0 : y))

if test "${system_screencap}" = true; then
    adb shell screencap /sdcard/screen.png
    sd_file=screen.png
else
    if test -z "$1"; then
        mkdir -p ~/tmp/weekly
        set -- ~/tmp/weekly/$(now.).jpg
    fi
    sd_file=$(basename "$1").jpg
    adb shell /data/data/com.android.shell/screencap \
        -x $x -y $y -X $X -Y $Y $(
        if test "$sticky" != 0; then
            echo -s $sticky;
        fi
        ) /sdcard/$sd_file
fi

if test "$1"; then
    adb pull /sdcard/$sd_file ~/tmp/$$-$sd_file
    adb shell rm -f /sdcard/$sd_file >/dev/null 2>&1 &

    if test "${1##*.}" != ${sd_file##*.}; then
        action=convert
    else
        action=mv
    fi
    $action ~/tmp/$$-$sd_file "$1"
    rm -f ~/tmp/$$-$sd_file
    if test "${edit}" = true; then
        gimp "$1"&
    fi
    exit
fi
