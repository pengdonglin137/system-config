#!/usr/bin/expect

if {[info exists env(JS_TARGET)]} {
    set js_target $env(JS_TARGET); #
} else {
    set js_target 162
}

if [regexp {^\d+$} $js_target] {
    set js_target -$js_target
}

proc qx cmd {
    set fh [open "|$cmd"]
    set res [read $fh]
    close $fh
    return $res
}

set local_ip [qx get-my-ip]

spawn ssh -o ControlMaster=auto -o ControlPath='tramp.%C' -o ControlPersist=no -e none js;
expect "Opt>" {
    send -- "$js_target\n";
    expect -re "\\$" {
        if {$argc != 0} {
            foreach arg $argv {
                send "$arg "
            }
            send "\n";
        } else {
            send "REMOTEPROTOCOL=jssh REMOTEIP=$local_ip REMOTEUSER=$env(USER) REMOTE_EXTRA_SSH_ARGS=\"-i \${HOME}/.ssh/id_rsa_remote_edit\" exec bash -c '. /apps/scm/prod/system-config/bin/sc try'\n";
        }

    }
}

interact;
wait
